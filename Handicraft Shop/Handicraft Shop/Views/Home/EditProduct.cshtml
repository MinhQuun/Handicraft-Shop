@model Handicraft_Shop.Models.SANPHAM

@{
    ViewBag.Title = "Chỉnh Sửa Sản Phẩm";
    Layout = "~/Views/Shared/Mainlayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-primary">Chỉnh Sửa Sản Phẩm</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @using (Html.BeginForm("EditProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.MASANPHAM)

        <div class="form-group">
            <label for="TENSANPHAM">Tên Sản Phẩm</label>
            @Html.EditorFor(model => model.TENSANPHAM, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="GIABAN">Giá Bán</label>
            @Html.EditorFor(model => model.GIABAN, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="HINHANH">Hình Ảnh</label>
            <input type="file" name="HINHANH" class="form-control" accept=".jpg,.jpeg,.png" />
            <img src="/HinhAnhSP/MUC HINH ANH CHUNG/@Model.HINHANH" alt="Product Image" style="max-width: 200px; margin-top: 10px;" />
            @if (!string.IsNullOrEmpty(Model.HINHANH))
            {
                            <p>Hình ảnh hiện tại:</p>
                            <img src="/HinhAnhSP/MUC HINH ANH CHUNG/@Url.Content("" + Model.HINHANH)" width="150" />}
        </div>

        <div class="form-group">
            <label for="MOTA">Mô Tả</label>
            @Html.TextAreaFor(model => model.MOTA, new { @class = "form-control", rows = 5 })
        </div>

        <div class="form-group">
            <label for="SOLUONGTON">Số Lượng Tồn</label>
            @Html.EditorFor(model => model.SOLUONGTON, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label for="MALOAI">Mã Loại</label>
            @Html.EditorFor(model => model.MALOAI, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <button type="submit" class="btn btn-primary mt-3">Lưu Thay Đổi</button>
        <a href="@Url.Action("InputProductId", "Home")" class="btn btn-secondary mt-3">Hủy</a>
    }
</div>
