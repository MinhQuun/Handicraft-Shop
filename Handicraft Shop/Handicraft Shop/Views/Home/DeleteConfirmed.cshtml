@model Handicraft_Shop.Models.SANPHAM

@{
    ViewBag.Title = "Xác Nhận Xóa Sản Phẩm";
    Layout = "~/Views/Shared/Mainlayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-danger">Xác Nhận Xóa Sản Phẩm</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="/HinhAnhSP/MUC HINH ANH CHUNG/@Model.HINHANH" alt="@Model.TENSANPHAM" class="img-fluid" />
        </div>
        <div class="col-md-8 product-info">
            <h2 class="product-title">@Model.TENSANPHAM</h2>
            <p class="product-price"> @String.Format("{0:#,###}", @Model.GIABAN) VNĐ </p>
            <p class="product-description"><strong>Mô tả:</strong> @Model.MOTA</p>
            <div>
                <a href="#" class="btn btn-outline-success" onclick="window.history.back(); return false;">Trở lại danh sách</a>
            </div>
        </div>
    </div>
    <p class="text-warning">Bạn có chắc chắn muốn xóa sản phẩm này không? Thao tác này không thể hoàn tác.</p>
    <div class="d-flex gap-3">
        @*@using (Html.BeginForm("DeleteConfirm", "Home", new { id = Model.MASANPHAM }, FormMethod.Post))
            {
                <button type="submit" class="btn btn-danger">Xóa</button>
            }*@
        @using (Html.BeginForm("DeleteConfirmed", "Home", FormMethod.Post))
        {
            <input type="hidden" name="id" value="@Model.MASANPHAM" />
            <button type="submit" class="btn btn-danger">Xóa</button>
        }
        <a href="@Url.Action("DeleteProductById", "Home")" class="btn btn-secondary">Hủy</a>
    </div>
</div>