@model List<CartItem>

@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Giỏ Hàng</h2>

@if (Model.Count == 0)
{
    <p>Giỏ hàng của bạn đang trống!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.TENSANPHAM</td>
                    <td>
                        @using (Html.BeginForm("CapNhatGio", "Home", FormMethod.Post))
                        {
                            <input type="hidden" name="id" value="@item.Product.MASANPHAM" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" />
                            <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                        }
                    </td>
                    <td>@String.Format("{0:N0}", item.Product.GIABAN) đ</td>
                    <td>@String.Format("{0:N0}", item.TotalPrice) đ</td>
                    <td>
                        <a href="@Url.Action("XoaKhoiGio", "Home", new { id = item.Product.MASANPHAM })"
                           class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"><strong>Tổng Tiền:</strong></td>
                <td colspan="2">@String.Format("{0:N0}", Model.Sum(i => i.TotalPrice)) đ</td>
            </tr>
        </tfoot>
    </table>

    <a href="/Home/Index" class="btn btn-secondary">Tiếp Tục Mua Sắm</a>
}

