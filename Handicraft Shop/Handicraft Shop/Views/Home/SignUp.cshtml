@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/Mainlayout.cshtml";
}
@model Handicraft_Shop.Models.NGUOIDUNG

<div class="signup-form-container">
    <div class="signup-form">
        <h2>Đăng Ký Tài Khoản</h2>
        @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="TENNGUOIDUNG">Tên Người Dùng</label>
                @Html.TextBoxFor(model => model.TENNGUOIDUNG, new { @class = "form-control", placeholder = "Nhập tên người dùng" })
            </div>
            <div class="form-group">
                <label for="TAIKHOAN">Tài Khoản</label>
                @Html.TextBoxFor(model => model.TAIKHOAN, new { @class = "form-control", placeholder = "Nhập tài khoản" })
            </div>
            <div class="form-group">
                <label for="MATKHAU">Mật Khẩu</label>
                @Html.PasswordFor(model => model.MATKHAU, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
            </div>
            <div class="form-group">
                <label for="EMAIL">Email</label>
                @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control", placeholder = "Nhập email" })
            </div>
            <div class="form-group">
                <label for="SODIENTHOAI">Số Điện Thoại</label>
                @Html.TextBoxFor(model => model.SODIENTHOAI, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
            </div>
            <button type="submit" class="btn btn-success">Đăng Ký</button>
        }
    </div>
</div>
<link href="~/bootstrap/bootstrap/css/SignUp.css" rel="stylesheet" />