@model Handicraft_Shop.Models.NHACUNGCAP
@{
    ViewBag.Title = "EditNhaCungCap";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}



<div class="container mt-4">
    <h2>Sửa Nhà Cung Cấp</h2>

    @using (Html.BeginForm("EditNhaCungCap", "NhanVien", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.MANHACUNGCAP)

        <div class="form-group">
            <label for="TENNHACUNGCAP">Tên Nhà Cung Cấp</label>
            @Html.TextBoxFor(m => m.TENNHACUNGCAP, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="DTHOAI">Điện Thoại</label>
            @Html.TextBoxFor(m => m.DTHOAI, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label for="DIACHI">Địa Chỉ</label>
            @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control", required = "required" })
        </div>

        <button type="submit" class="btn btn-primary mt-3">Lưu Thay Đổi</button>
        <a href="@Url.Action("NhanVienQuanLyNhaCungCap", "NhanVien")" class="btn btn-secondary mt-3">Quay lại</a>
    }
</div>

