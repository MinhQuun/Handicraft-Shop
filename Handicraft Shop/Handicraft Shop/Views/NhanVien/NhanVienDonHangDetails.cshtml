
@{
    ViewBag.Title = "NhanVienDonHangDetails";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}

@model Handicraft_Shop.Models.DONHANG

<h2>Chi Tiết Đơn Hàng</h2>

<div class="order-info">
    <h4>Thông tin đơn hàng</h4>
    <p><strong>Mã đơn hàng:</strong> @Model.MADONHANG</p>
    <p><strong>Khách hàng:</strong> @Model.KHACHHANG.HOTEN</p>
    <p><strong>Ngày đặt:</strong> @Model.NGAYDAT</p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.DIACHI_GIAOHANG.DIACHI</p>
    <p><strong>Tổng số lượng:</strong> @Model.TONGSLHANG</p>
    <p><strong>Tổng thành tiền:</strong> @String.Format("{0:N0}", Model.TONGTHANHTIEN) VNĐ</p>
    <p><strong>Trạng thái:</strong> @Model.TRANGTHAI</p>
</div>

<hr />

<h4>Danh sách sản phẩm</h4>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.ChiTietDonHang)
        {
            <tr>
                <td>@item.SANPHAM.TENSANPHAM</td>
                <td>@item.SOLUONG</td>
                <td>@String.Format("{0:N0}", item.DONGIA) VNĐ</td>
                <td>@String.Format("{0:N0}", item.SOLUONG * item.DONGIA) VNĐ</td>
            </tr>
        }
    </tbody>
</table>

<!-- Nút Quay lại -->
<div class="text-right">
    <a href="@Url.Action("NhanVienQuanLyDonHang", "NhanVien")" class="btn btn-secondary">Quay lại</a>
</div>


