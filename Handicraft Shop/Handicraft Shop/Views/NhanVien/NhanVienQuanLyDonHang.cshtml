@using Handicraft_Shop.Models;
@{
    ViewBag.Title = "NhanVienQuanLyDonHang";
    Layout = "~/Views/Shared/NhanVienLayout.cshtml";
}

@model List<Handicraft_Shop.Models.DONHANG>

@section Styles {
    <style>
        /* Tiêu đề trang */
        h2 {
            text-align: center;
            color: #5a5a5a; /* Màu chữ nhẹ hơn */
            font-weight: bold;
            margin-top: 30px; /* Tạo khoảng cách để không bị che */
            margin-bottom: 20px;
            font-size: 24px;
        }

        /* Bảng */
        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fafafa; /* Nền nhẹ hơn */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng nhẹ */
            margin-top: 20px;
        }

            .table thead {
                background-color: #8d6e63; /* Màu nâu nhạt hơn */
                color: #ffffff;
            }

            .table th, .table td {
                padding: 15px;
                text-align: center;
                border: 1px solid #ddd;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f5f5f5; /* Nền xen kẽ sáng hơn */
            }

            .table tbody tr:hover {
                background-color: #f0f4c3; /* Màu nền nhạt hơn khi hover */
            }

        /* Nút hành động */
        .btn-info {
            background-color: #4fc3f7; /* Xanh nhạt hơn */
            color: white;
            border: none;
            margin-right: 5px;
            padding: 8px 12px;
            font-weight: 500;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #29b6f6;
            }

        .btn-success {
            background-color: #81c784; /* Xanh lá nhẹ hơn */
            color: white;
            border: none;
            padding: 8px 12px;
            font-weight: 500;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #66bb6a;
            }

        /* Select box */
        select.form-control {
            display: inline-block;
            width: auto;
            min-width: 140px; /* Tăng độ rộng để tránh cắt chữ */
            margin-right: 10px;
            padding: 5px 8px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        /* Phân trang */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination a {
                color: #5a5a5a; /* Màu chữ nhẹ */
                padding: 10px 15px;
                margin: 0 5px;
                text-decoration: none;
                border: 1px solid #ddd;
                border-radius: 5px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .pagination a.active {
                    background-color: #6d4c41;
                    color: #ffffff;
                    border: none;
                }

                .pagination a:hover:not(.active) {
                    background-color: #e0f2f1;
                    color: #6d4c41;
                }

        /* Lớp CSS làm mờ các đơn hàng đã hủy */
        .canceled-order {
            opacity: 0.6;
            pointer-events: none; /* Không cho phép thao tác với các button */
        }

            .canceled-order .btn-info,
            .canceled-order .btn-success,
            .canceled-order select.form-control {
                pointer-events: none; /* Không cho phép chọn hoặc nhấp chuột */
            }

        select.form-control {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            padding-right: 20px; /* Để có không gian cho mũi tên */
        }

            select.form-control option.huy {
                background-color: #f0f0f0; /* Tạo màu nền khác nếu cần */
                color: #b0b0b0; /* Màu chữ nhẹ */
                font-weight: bold; /* Tạo nổi bật cho giá trị "Hủy" */
            }

    </style>
}

<h2>Quản lý Đơn Hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Khách Hàng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Số Lượng</th>
            <th>Tổng Thành Tiền</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            var isCanceled = donHang.TRANGTHAI == "Đã hủy";
            <tr class="@(isCanceled ? "canceled-order" : "")">
                <td>@donHang.MADONHANG</td>
                <td>@donHang.KHACHHANG.HOTEN</td>
                <td>@string.Format("{0:dd/MM/yyyy HH:mm:ss}", donHang.NGAYDAT)</td>
                <td>@donHang.TONGSLHANG</td>
                <td>@String.Format("{0:N0}", donHang.TONGTHANHTIEN) VNĐ</td>
                <td>@donHang.TRANGTHAI</td>
                <td>
                    @if (!isCanceled)
                    {
                        <a href="@Url.Action("NhanVienDonHangDetails", new { id = donHang.MADONHANG })" class="btn btn-info">Chi Tiết</a>
                    }
                    <form action="@Url.Action("NhanVienUpdateTrangThaiDonHang", new { id = donHang.MADONHANG })" method="post" style="display:inline;">
                        <select name="trangThaiMoi" class="form-control">
                            <option value="Đang xử lý" @(donHang.TRANGTHAI == "Đang xử lý" ? "selected" : "")>Đang xử lý</option>
                            <option value="Đang giao" @(donHang.TRANGTHAI == "Đang giao" ? "selected" : "")>Đang giao</option>
                            <option value="Đã giao" @(donHang.TRANGTHAI == "Đã giao" ? "selected" : "")>Đã giao</option>
                            @if (isCanceled)
                            {
                                <option class="huy" value="Hủy" @(donHang.TRANGTHAI == "Đã hủy" ? "selected" : "")>Hủy</option>
                            }
                            
                        </select>
                        @if (!isCanceled)
                        {
                            <button type="submit" class="btn btn-success">Cập Nhật</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Hiển thị phân trang -->
<div class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("NhanVienQuanLyDonHang", new { page = i })" class="@(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
    }
</div>
