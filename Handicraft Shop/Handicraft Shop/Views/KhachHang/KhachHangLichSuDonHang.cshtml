
@{
    ViewBag.Title = "KhachHangLichSuDonHang";
    Layout = "~/Views/Shared/KhachHangLayout.cshtml";
}

@model List<Handicraft_Shop.Models.DONHANG>

<h2>Lịch Sử Đơn Hàng</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Ngày Đặt</th>
            <th>Ngày Giao</th>
            <th>Tổng Số Lượng Hàng</th>
            <th>Tổng Thành Tiền</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MADONHANG</td>
                <td>@donHang.NGAYDAT.ToString("dd/MM/yyyy")</td>
                <td>@donHang.NGAYGIAO?.ToString("dd/MM/yyyy")</td> <!-- Sử dụng `?` để kiểm tra null -->
                <td>@donHang.TONGSLHANG</td>
                <td>@String.Format("{0:#,###} VND", donHang.TONGTHANHTIEN)</td>
                <td>@donHang.TRANGTHAI</td>
            </tr>
        }
    </tbody>
</table>
