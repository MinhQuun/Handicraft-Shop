@using Handicraft_Shop.Models;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link href="~/bootstrap/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/bootstrap/js/jquery-3.3.1.min.js"></script>
    <script src="~/bootstrap/bootstrap/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title</title>

    <style>
        /* Đảm bảo layout có thể cuộn đúng */
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden; /* Chặn cuộn ngang */
        }

        /* Cố định header ở trên cùng */
        header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 100;
            background-color: #343a40;
            padding: 15px 0;
        }

        /* Đảm bảo phần nội dung không bị che bởi header */
        .content {
            margin-top: 80px; /* Chiều cao header */
            padding: 20px;
        }

        .header__nav {
            position: relative;
            display: inline-block;
        }

        .header__nav-link {
            text-decoration: none;
            color: #fff;
            display: flex;
            align-items: center;
            padding: 10px;
            font-weight: bold;
        }

            .header__nav-link svg {
                margin-left: 5px;
            }

        .submenu {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .submenu a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .submenu a:hover {
                    background-color: #f1f1f1;
                }

        .header__nav:hover .submenu {
            display: block;
        }
    </style>
</head>

<body>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="~/Hinh/everonvn-vn.jpg" class="bi me-2" width="80" height="32" />

                </a>

                <ul class="nav col-11 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li>
                        <div class="header__nav">
                            <a href="javascript:;" class="nav-link px-2 text-white">
                                Danh Mục Sản phẩm
                            </a>
                            <div class="submenu">
                                @Html.Action("KhachHangMenuCap1", "KhachHang")
                            </div>
                        </div>
                    </li>
                    <li><a href="/KhachHang/IndexKhachHang#Product" class="nav-link px-2 text-white">Danh Sách Sản Phẩm</a></li>
                    @*<li><a href="/Home/LichSuDonHang" class="nav-link px-2 text-white">Lịch Sử Đơn Hàng</a></li>*@
                    

                </ul>

                <div class="text-end">

                    @if (Session["kh"] == null)
                    {
                        <a href="/Home/Login" class="btn btn-outline-light me-2">Đăng Nhập</a>
                        <a href="/Home/SignUp" class="btn btn-outline-success me-2">Đăng Ký</a>
                    }
                    else
                    {
                        <a href="/Home/Logout" class="btn btn-outline-danger me-2">Đăng Xuất</a>

                        @*if (Session["kh"] != null)
                        {
                            var kh = Session["kh"] as KHACHHANG;
                            <label>Chào bạn, @kh.HOTEN</label>
                        }
                        else
                        {
                            <label></label>
                        }*@

                    }



                </div>
                <div class="col-md-3 d-flex justify-content-center">
                    @using (Html.BeginForm("KhachHangSearch", "KhachHang", FormMethod.Get, new { @class = "form-inline" }))
                    {
                        <div class="form-group">
                            <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên cần tìm">
                            <a href="/Home/Search">
                                <img class="icon-search" src="https://salt.tikicdn.com/ts/upload/33/d0/37/6fef2e788f00a16dc7d5a1dfc5d0e97a.png" alt="icon-search" style="width:25px;height:25px;color:white">

                            </a>
                        </div>
                    }
                </div>
                <a href="/KhachHang/KhachHangXemGioHang">
                    <img class="cart-icon" src="https://salt.tikicdn.com/ts/upload/51/e2/92/8ca7e2cc5ede8c09e34d1beb50267f4f.png"
                         alt="header_header_img_Cart" style="width:25px;height:25px;color:white;padding-left:5px">
                    @if (Session["Cart"] != null)
                    {
                        var cart = Session["Cart"] as List<CartItem>;
                        <span class="badge bg-light text-dark">@cart.Count</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-dark">0</span>
                    }
                </a>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>
</body>
</html>
